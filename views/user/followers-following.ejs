<%- include("../includes/head.ejs") %>
    <link rel="stylesheet" href="/css/general.css">
    <link rel="stylesheet" href="/css/search.css">
    </head>

<body>
    <%- include("../includes/navigation.ejs") %>

    <main>

        <div class="cont">
            <div class="left-div">
                <div>
                    <h1 class = "heading"> <%= heading %> </h1>
                </div>
                <div class="logo">
                    <img src="/assets/logo14.svg" alt="logo" style = "height: 50%; width: 50%;" />
                </div>
            </div>
            <div class="right-div" style= "margin-right: 4em; height: auto;">
                <% if (followers.length > 0) { %>
                    <div>
                        <div class="users-grid">
                            <% for (let user of followers) { %>
                            <a href="/profile/<%= user.userName %> ">
                                <div class = "user-container">
                                    <img class = "profile-pic" src="/<%= user.displayPicture !== null ? user.displayPicture : 'assets/user2.svg'; %>" alt="pp">
                                    <h5><%= user.userName %> </h5>
                                    <form action="/follow" action="POST">
                                        <input type="hidden" name="followname" value="<% user.userName %> ">
                                    </form>
                                </div>
                            </a>
                            <% } %>
                        </div>
                    </div>
                <% } else { %>
                    <h1 style="color:white">No <%= heading %>!</h1>
                <% } %>
            </div>
        </div>
    </main>


<%- include("../includes/end.ejs") %>
