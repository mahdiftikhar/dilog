<%- include("../admin-includes/head.ejs") %>
    <link rel="stylesheet" href="/css/general.css"> 
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/post.css" /> 
    </head>

<body>
    <%- include("../admin-includes/navigation.ejs") %>

    <main>

        <% if (posts.length > 0) { %>    
            <div class="cont">
                <div class="right-div">
                    <div class="post">
                        <% for (let post of posts) { %>
                                <%- include("../admin-includes/post-template.ejs", {post: post}) %>
                            <% } %>
                    </div>
                    
                    <div>
                        <% if (pageNo === 0) { %>
                            <a href="/admin/home?pageNo=<%= pageNo + 1 %>">Next</a>
                        <% } else if (lastPage) { %>
                            <a href="/admin/home?pageNo=<%= pageNo - 1 %>">Prev</a>
                        <% } else { %>
                            <a href="/admin/home?pageNo=<%= pageNo - 1 %>">Prev</a>
                            <a href="/admin/home?pageNo=<%= pageNo + 1 %>">Next</a>
                        <% } %> 
                    </div>

                </div>
                <div class="left-div">
                    <div>
                        <h1 class="heading">Home</h1>
                    </div>
                    <div class="logo">
                        <img src="/assets/logo8.svg" alt="logo" />
                    </div>
                </div>
            </div>
        <% } else { %> 
            <h1>No Posts Found</h1>
        <% } %> 
    </main>


<%- include("../admin-includes/end.ejs") %>
