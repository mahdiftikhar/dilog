<article class="card-holder">
    <a href="/admin/post/<%= post.id %>" class="a-tag">
        <div class="card-content">
            <div class="top-info">
                <h4><%= post.userName %></h4>
                <h6><%= post.creationTime %></h6>
            </div>
            <div class="post-content">
                <div class="card__image image-content">
                    <% if (post.image) { %> 
                        <img src="/<%= post.image %>" alt="image">
                    <% } %>
                </div>
                <div class="card-text">
                    <p><%= post.text %></p>
                </div>
            </div>
            <div class="tag-content">
                <h6>Tags:</h6>
                <p><%= post.tags %></p>
            </div>

        </div>
    </a>

    <div class="card__actions bot-info">
        <form action="/admin/delete-post" method="POST">
            <input type="hidden" name="postId" value="<%= post.id %>" />
            <button class="btn">Delete</button>
        </form>
        <% if (reportedPost) { %>
        <div class="report-reason">
            <h6 style="padding-top: 3px">Report Reason</h6>
            <p style="padding-left: 5px"><%= post.reportReason %></p>
        </div>
        <% } %>
    </div>
</article>
