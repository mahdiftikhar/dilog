<div>
  <article class="card-holder comment-container">
    <div>
      <div class="top-info">
        <h4><%= comment.userName %></h4>
        <h6><%= comment.creationTime %></h6>
      </div>

      <div class="bio-container">
        <% if (comment.edit) { %>
        <form action="/edit-comment" method="POST">
          <textarea name="newTest"><%= comment.text %> </textarea>
          <button class="btn" type="submit">Submit</button>
        </form>
        <% } else { %>
        <p class="text-content"><%= comment.text %></p>
        <% } %>
      </div>
    </div>

    <div class="card__actions bot-info">
      <button class="btn">Like (<%= comment.reacts %> )</button>
      <% if (comment.isUser && !comment.edit) { %>

      <button class="btn">Delete</button>
      <!-- <div class="btn"> -->
      <a
        href="/edit-comment?commentId=<%= comment.id %>&postId=<%= comment.postId %>"
      >
        <div class="btn">Edit</div>
      </a>

      <% } %>

      <!-- <button class="btn">Like (<%= comment.reacts %> )</button> -->

      <% if (!comment.isUser) { %>
      <button class="btn">Report</button>
      <% } %>
    </div>
  </article>
</div>
