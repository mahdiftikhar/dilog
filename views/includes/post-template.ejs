<article class="card-holder">
    <a href="/post/<%= post.id %>" class="a-tag">
        <div class="card-content">
            <div class="top-info">
                <h4><%= post.userName %></h4>
                <h6><%= post.creationTime %></h6>
            </div>
            <div class="post-content">
                <div class="card__image">
                    <img src="<% post.image %>" alt="" />
                </div>
                <div class="card-text">
                    <p><%= post.text %></p>
                </div>
            </div>
            <div class="tag-content">
                <h6>Tags:</h6>
                <p><%= post.tags %></p>
            </div>

            <% if (post.image) { %> 
                <img src="" alt="">    
            <% } %>
            
        </div>
    </a>

    
    
    <div class="card__actions bot-info">
        
        <form action="/post/:postid/like" method="GET">
            <button class="btn" type="submit">Like (<%= post.reacts %>)</button>
        </form>
        
        
        <% if (!post.isUser) { %>
            <button class="btn">Report</button>
        <% } %>
            
        <% if (post.isUser) { %>
            <form action="/post/edit/<%= post.id %>" action="GET"> 
                <button class="btn" type="submit">Edit</a>
            </form>
        <% } %>

    </div>

    <div class="card__actions bot-info">
        <form action="/make-comment" method="POST">
            <textarea name="comment" placeholder="Write Comment Here" required></textarea>
            <input type="hidden" name="postId" value="<%= post.id %>">
            <button class="btn">Comment</button>
        </form>
    </div>

</article>
